<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.thinkpaduser.loverunning.fragment.StaticsDataFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/fragment_statics_data_linechart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp">
            <TextView
                android:id="@+id/fragment_statics_data_tv_thisMonth_calorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="本月步数:22333步" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最近更新"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/fragment_statics_data_tv_thisMonth_calorie"/>
        </RelativeLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fragment_statics_data_tv_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日"
                android:layout_gravity="center"
                android:paddingLeft="16dp"
                android:textAppearance="?android:textAppearanceMedium"/>
            <TextView
                android:id="@+id/fragment_statics_data_tv_monthAndDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7月1日"
                android:layout_gravity="center"
                android:paddingLeft="16dp"
               />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/fragment_statics_data_tv_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="87838"
                android:textColor="#f40000"
                android:textSize="40sp"
                android:textAppearance="?android:textAppearanceLarge"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="步"
                android:textAppearance="?android:textAppearanceMedium"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/fragment_statics_data_tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60"
                android:textColor="#f40000"
                android:textSize="40sp"
                android:textAppearance="?android:textAppearanceLarge"
               android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="路程\n(公里)"/>
            </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/fragment_statics_data_tv_calorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000"
                android:textColor="#f40000"
                android:textSize="40sp"
                android:textAppearance="?android:textAppearanceLarge"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热量\n(大卡)"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/fragment_statics_data_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="88"
                android:textColor="#f40000"
                android:textSize="40sp"
                android:textAppearance="?android:textAppearanceLarge"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/fragment_statics_tv_hour_or_minute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间\n(小时)"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
